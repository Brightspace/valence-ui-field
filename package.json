{
  "name": "vui-field",
  "version": "0.6.0",
  "description": "Mixins and CSS for applying field styles",
  "scripts": {
    "clean": "rimraf *.css",
    "prebuild": "npm run clean && imgtoscss -p vui- -o field-icons.scss *.png",
    "build": "node-sass --output-style expanded field.css.scss field.css",
    "pretest": "npm run build",
    "test": "csslint field.css && karma start karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-field.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-field/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-field",
  "devDependencies": {
    "csslint": "^0.10.0",
    "images-to-variables": "^0.2.1",
    "jasmine-dom-matchers": "^0.1.0",
    "karma": "^0.12.32",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-jasmine": "^0.3.5",
    "karma-cli": "0.0.4",
    "node-sass": "^3.1.1",
    "rimraf": "^2.3.4"
  }
}
